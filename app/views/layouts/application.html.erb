<!DOCTYPE html>
<html>
  <head>
    <title>Todo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to 'TODO' , root_path , class: 'navbar-brand' %>
          </div>
          <ul class="nav navbar-nav navbar-right">

            <% if user_signed_in? %>
              <li><a href="<%= lists_path	 %>"><span class="glyphicon glyphicon-list"></span> รายการ TODO</a></li>
              <li><a href="<%= edit_user_registration_path %>"><span class="glyphicon glyphicon-user"></span> <%= current_user.name_email %></a></li>
              <li><%= link_to "Logout", destroy_user_session_path ,method: :delete , class: 'glyphicon glyphicon-log-out' %></li>
            <% else %>
              <li><a href="<%= new_user_registration_path %>"><span class="glyphicon glyphicon-user"></span> สมัครสมาชิก</a></li>
              <li><a href="<%= new_user_session_path %>"><span class="glyphicon glyphicon-log-in"></span> ลงชื่อเข้าใช้</a></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>

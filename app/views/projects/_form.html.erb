<%= form_for @project do |f| %>
  <div class="form-group">
    <%= f.label :ชื่อโครงการ %>
    <%= f.text_field :name , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :คำอธิบาย %>
    <%= f.text_area :description , class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'บันทึก' ,  class: 'btn btn-success'%>
  </div>
<% end %>

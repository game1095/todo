<div class="col-md-12">
  <div class="col-md-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3><i class="fa fa-book" aria-hidden="true"></i> รายการโปค</h3>
      </div>
      <div class="panel-body">
        <div class="row bottom-margin-list">
          <div class="col-md-12">
            <div class="col-md-4">
              <%=link_to 'เพิ่มโปรเจค' , new_project_path , class: 'btn btn-info btn-lg' %>
            </div>
            <div class="col-md-4 col-md-offset-4">
              <!-- <%= link_to 'กลับ' , projects_path , class: 'btn btn-default btn-lg float-right' %> -->
            </div>
          </div>
        </div>
        <% @projects.each do |project| %>
          <div class="col-md-4">
            <div class="well well-lg">
              <div class="row">
                <div class="col-md-8">
                  <p class="text-completed"><b>ชื่อโปรเจค : </b><%= link_to project.name , project_lists_path(project) %></p>
                  <p class="text-completed"><b>รายละเอียด : </b><%= project.description %></p>
                </div>
                <div class="col-md-3">
                </div>
              </div>
              <div class="right">
                <%= link_to 'แก้ไข' , edit_project_path(project) , class: 'btn btn-default' %>
                <%= link_to 'ลบ' , project_path(project) , method: :delete , class: 'btn btn-danger' , data:  {confirm: 'คุณต้องการจะลบโปรเจคนี้ใช่หรือไม่ ?'}%>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

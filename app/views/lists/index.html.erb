<div class="col-md-12">
  <div class="col-md-9">
    <h3>TODO lists</h3>
    <p>จำนวน TODO list ทั้งหมด  : <%= @count %></p>
    <h3><%=link_to 'Add to do list' , new_list_path , class: 'btn btn-default' %></h3>
    <% @lists.each do |list| %>
      <div class="well well-lg">
        <p class="text">Title : <%= list.title %></p>
        <p>User : <%= list.user.email %></p>
        <div class="right">
          <div class="col-m-3">
            <%=link_to "ลบ" ,  list_path(list) , method: :delete  , class: 'btn btn-danger' %>
            <%=link_to "ทำเสร็จแล้ว" , list_complete_path(list) , method: :post , class: 'btn btn-success'  %>
            <%=link_to "แสดงเพิ่มเติม" , list_path(list) , class: 'btn btn-info' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">
    <h3>Completed Lists</h3>
    <% @complete_list.each do |list| %>
        <p>Title: <%= list.title %></p>
    <% end %>
    <p><%= link_to "ลบ completed list ทั้งหมด" , list_all_del_completed_path(@complete_list) , method: :delete%></p>
  </div>
</div>

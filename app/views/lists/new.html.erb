<div class="well">
  <h1>เพิ่ม TODO list</h1>
  <%= form_for @list do |f| %>
  <% if @list.errors.any? %>
  <div id="errors_explimination">
   <ul>
     <% @list.errors.full_messages.each do |msg| %>
     <li class="alert alert-danger"><%= msg %></li>
     <% end %>
   </ul>
  </div>
  <% end %>
    <div class="form-group">
      <%= f.label :หัวข้อเรื่้อง %>
      <%= f.text_field :title , class: 'form-control' , required: true , autocomplete: :off %>
    </div>

    <div class="form-group">
      <%= f.label :คำอธิบาย %>
      <%= f.text_area :description  , class: 'form-control' , required: true%>
    </div>

    <div class="form-group">
      <%= f.label :วันสิ้นสุด %>
      <%= f.date_field :finishedDate , class: 'form-control' , required: true %>
    </div>

    <div class="action">
      <%= f.submit  'บันทึก' , class: 'btn btn-success' %>
    </div>
  <% end %>

</div>

<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
  <div class="panel panel-heading">
    <h1>เพิ่ม TODO list</h1>
  </div>
    <div class="panel panel-body">
      <%= form_for @list do |f| %>
      <% if @list.errors.any? %>
      <div id="errors_explimination">
       <ul>
         <% @list.errors.full_messages.each do |msg| %>
         <li class="alert alert-danger"><%= msg %></li>
         <% end %>
       </ul>
      </div>
      <% end %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :หัวข้อเรื่อง %>
              <%= f.text_field :title , class: 'form-control' , required: true ,  autocomplete: :off  , placeholder: 'กรอกหัวข้อเรื่อง' %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :ความสำคัญ %>
              <%= f.collection_select :priority_id, Priority.all, :id, :name, {prompt: "โปรดเลือกระดับความสำคัญ"}, {class: "form-control"}%>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :คำอธิบาย %>
          <%= f.text_area :description  , class: 'form-control' , required: true , placeholder: 'กรอกคำอธิบาย' , cols: 50 , rows: 20 %>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :วันเริ่มต้น %>
              <%= f.date_field :startdate , class: 'form-control' , required: true %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :วันสิ้นสุด %>
              <%= f.date_field :dateline , class: 'form-control' ,required: true  %>
            </div>
          </div>
        </div>

        <div class="action pull-right">
          <%= f.submit  'บันทึก' , class: 'btn btn-success'  %>
          <%= link_to ' กลับ' , lists_path , class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
